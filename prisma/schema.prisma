generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  personId         String   @id @default(uuid()) @db.Uuid
  firstName        String
  lastName         String
  email            String
  isEmailConfirmed Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
